<h2 align='center'>Admin Manager - List of existing users</h2>

{{#if userDTOs.length}}

  <table class='table1' id='table1' cellPadding='10' border='1' align='center'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Lastname</th>
        <th>Mail</th>
        <th>Role</th>
        <th>Delete</th>
        <th>Toggle user</th>
      </tr>
    </thead>
    <tbody id='usersTable1'>
      {{#each userDTOs}}
        <tr>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{email}}</td>
          <td>{{role}}</td>
          {{#unless isAdmin}}
            <td><button class='delete' data-id='{{id}}'>Delete</button></td>
            <td><button class='toggleUser' data-id='{{id}}'>Toggle user</button></td>
          {{/unless}}
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <h2>No users found</h2>
{{/if}}

<script src='/socket.io/socket.io.js'></script>
<script src='/js/users.js'></script>